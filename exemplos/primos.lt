-- Exemplo de programa que verifica se um número é primo ou não utilizando a Linguagem Lotus

let n, flag = 0 : int;

println(Digite um número para saber se é primo);
scan(n);

for(let i = 2: int; i <= n^(1/2.0); i = i + 1){
	if(n%i == 0){
		flag = 1;
		break;
	}
}

if (!flag && n != 1){
	println(O número $n$ é primo);
}
else {
	println(O número $n$ não é primo);
}
